{
  "$schema": "https://questerix.com/design-tokens.schema.json",
  "version": "1.0.0",
  "description": "Questerix Unified Shadow/Elevation System",

  "elevation": {
    "none": {
      "css": "none",
      "flutter": { "elevation": 0 }
    },
    "xs": {
      "css": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "flutter": { "blurRadius": 2, "offsetY": 1, "opacity": 0.05 }
    },
    "sm": {
      "css": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1)",
      "flutter": { "blurRadius": 3, "offsetY": 1, "opacity": 0.1 }
    },
    "md": {
      "css": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)",
      "flutter": { "blurRadius": 6, "offsetY": 4, "opacity": 0.1 }
    },
    "lg": {
      "css": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)",
      "flutter": { "blurRadius": 15, "offsetY": 10, "opacity": 0.1 }
    },
    "xl": {
      "css": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1)",
      "flutter": { "blurRadius": 25, "offsetY": 20, "opacity": 0.1 }
    },
    "2xl": {
      "css": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
      "flutter": { "blurRadius": 50, "offsetY": 25, "opacity": 0.25 }
    }
  },

  "semantic": {
    "card": "sm",
    "cardHover": "md",
    "dropdown": "lg",
    "modal": "xl",
    "toast": "lg"
  }
}
