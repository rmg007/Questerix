{
  "$schema": "https://questerix.com/design-tokens.schema.json",
  "version": "1.0.0",
  "description": "Questerix Unified Typography System",

  "fontFamilies": {
    "primary": {
      "web": "Inter, system-ui, -apple-system, sans-serif",
      "flutter": "Inter"
    },
    "mono": {
      "web": "'JetBrains Mono', 'Fira Code', monospace",
      "flutter": "JetBrains Mono"
    }
  },

  "fontSizes": {
    "xs": { "px": 12, "rem": "0.75rem" },
    "sm": { "px": 14, "rem": "0.875rem" },
    "base": { "px": 16, "rem": "1rem" },
    "lg": { "px": 18, "rem": "1.125rem" },
    "xl": { "px": 20, "rem": "1.25rem" },
    "2xl": { "px": 24, "rem": "1.5rem" },
    "3xl": { "px": 30, "rem": "1.875rem" },
    "4xl": { "px": 36, "rem": "2.25rem" },
    "5xl": { "px": 48, "rem": "3rem" }
  },

  "fontWeights": {
    "normal": 400,
    "medium": 500,
    "semibold": 600,
    "bold": 700
  },

  "lineHeights": {
    "none": 1,
    "tight": 1.25,
    "snug": 1.375,
    "normal": 1.5,
    "relaxed": 1.625,
    "loose": 2
  },

  "letterSpacing": {
    "tighter": "-0.05em",
    "tight": "-0.025em",
    "normal": "0em",
    "wide": "0.025em",
    "wider": "0.05em"
  },

  "textStyles": {
    "h1": {
      "fontSize": "4xl",
      "fontWeight": "bold",
      "lineHeight": "tight",
      "letterSpacing": "tight"
    },
    "h2": {
      "fontSize": "3xl",
      "fontWeight": "semibold",
      "lineHeight": "tight",
      "letterSpacing": "tight"
    },
    "h3": {
      "fontSize": "2xl",
      "fontWeight": "semibold",
      "lineHeight": "snug"
    },
    "h4": {
      "fontSize": "xl",
      "fontWeight": "semibold",
      "lineHeight": "snug"
    },
    "body": {
      "fontSize": "base",
      "fontWeight": "normal",
      "lineHeight": "normal"
    },
    "bodySmall": {
      "fontSize": "sm",
      "fontWeight": "normal",
      "lineHeight": "normal"
    },
    "caption": {
      "fontSize": "xs",
      "fontWeight": "normal",
      "lineHeight": "normal"
    },
    "button": {
      "fontSize": "sm",
      "fontWeight": "medium",
      "lineHeight": "none",
      "letterSpacing": "wide"
    }
  }
}
