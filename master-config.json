{
  "$schema": "./config-schema.json",
  "version": "1.0.0",
  "environment": "production",
  
  "global": {
    "SUPABASE_URL": "PLACEHOLDER_SUPABASE_URL",
    "SUPABASE_ANON_KEY": "PLACEHOLDER_SUPABASE_ANON_KEY",
    "API_BASE_URL": "https://api.questerix.com"
  },
  
  "admin": {
    "VITE_APP_NAME": "Questerix Admin",
    "VITE_APP_VERSION": "${version}",
    "VITE_SUPABASE_URL": "${global.SUPABASE_URL}",
    "VITE_SUPABASE_ANON_KEY": "${global.SUPABASE_ANON_KEY}",
    "VITE_ENABLE_OFFLINE_MODE": "true",
    "VITE_ANALYTICS_ID": "",
    "VITE_GEMINI_API_KEY": ""
  },
  
  "student": {
    "APP_NAME": "Questerix",
    "APP_VERSION": "${version}",
    "SUPABASE_URL": "${global.SUPABASE_URL}",
    "SUPABASE_ANON_KEY": "${global.SUPABASE_ANON_KEY}",
    "THEME_PRIMARY_COLOR": "0xFF319795",
    "ENABLE_OFFLINE_FIRST": "true",
    "DRIFT_DB_VERSION": "1",
    "SENTRY_ENABLED": "false",
    "SENTRY_DSN": ""
  },
  
  "cloudflare": {
    "account_id": "PLACEHOLDER_ACCOUNT_ID",
    "landing_project": "questerix-landing",
    "admin_project": "questerix-admin",
    "student_project": "questerix-student"
  }
}
